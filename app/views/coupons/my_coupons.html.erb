<h1>我的折價券</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <td>折價券名稱</td>
      <td>折價</td>
      <td>折價券代碼</td>
    </tr>
  </thead>
  <tbody>
    <% @my_coupons.each do |coupon| %>
    <tr>
      <td>
        <%= coupon.title %>
      </td>
      <td class="text-primary text-lg"><%= coupon.discount %></td>
      <td><%= coupon.code %></td>
    </tr>
    <% end %>
  </tbody>
</table>
