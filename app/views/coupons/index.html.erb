<h1>折價券專區</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <td>折價券名稱</td>
      <td>折價</td>
      <td>折價券代碼</td>
      <td>使用期限</td>
      <td>其他</td>
    </tr>
  </thead>
  <tbody>
    <% @coupons.each do |coupon| %>
    <tr>
      <td>
        <%= coupon.title %>
      </td>
      <td class="text-primary text-lg"><%= coupon.discount %></td>
      <td><%= coupon.code %></td>
      <td><%= coupon.end_time ? coupon.end_time.strftime("%Y/%m/%d %T") : "無期限" %></td>
      <td>
        <%= link_to '領用', coupon_path(coupon), method: "patch", class: "btn btn-xs btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
