<h1>商品列表(後台)</h1>

<%= link_to '新增商品', new_admin_product_path, class: "btn btn-default btn-primary" %>
<%= link_to '折價券列表', admin_coupons_path, class: "btn btn-default btn-primary" %>

<table class="table table-hover">
  <thead>
    <tr>
      <td>商品名稱</td>
      <td>售價</td>
      <td>其他</td>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td>
        <%= product.title %>
      </td>
      <td class="text-primary text-lg"><%= product.price %></td>
      <td>
        <%= link_to '編輯', edit_admin_product_path(product), class: "btn btn-xs btn-warning" %>
        <%= link_to '刪除', admin_product_path(product), method: "delete", data: { confirm: "確定刪除?" }, class: "btn btn-xs btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
