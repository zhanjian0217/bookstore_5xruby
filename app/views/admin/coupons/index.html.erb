<h1>折價券列表(後台)</h1>


<%= link_to '新增折價券', new_admin_coupon_path, class: "btn btn-default btn-primary" %>

<table class="table table-hover">
  <thead>
    <tr>
      <td>折價券名稱</td>
      <td>折價</td>
      <td>折價券代碼</td>
      <td>使用期限</td>
      <td>使用狀態</td>
      <td>是否被領用</td>
      <td>其他</td>
    </tr>
  </thead>
  <tbody>
    <% @coupons.each do |coupon| %>
    <tr>
      <td>
        <%= coupon.title %>
      </td>
      <td class="text-primary text-lg"><%= coupon.discount %></td>
      <td><%= coupon.code %></td>
      <td><%= coupon.end_time ? coupon.end_time.strftime("%Y/%m/%d %T") : "無期限" %></td>
      <td><%= coupon.coupon_status(coupon.status) %></td>
      <td><%= coupon.user.nil? ? "尚未被領用" : coupon.user.username %></td>
      <td>
        <%= link_to '刪除', admin_coupon_path(coupon), method: "delete", data: { confirm: "確定刪除?" }, class: "btn btn-xs btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
