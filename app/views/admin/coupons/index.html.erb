<h1>折價券列表</h1>


<%= link_to '新增折價券', new_admin_coupon_path, class: "btn btn-default btn-primary" %>

<table class="table table-hover">
  <thead>
    <tr>
      <td>折價券名稱</td>
      <td>折價</td>
      <td>折價券代碼</td>
    </tr>
  </thead>
  <tbody>
    <% @coupons.each do |coupon| %>
    <tr>
      <td>
        <%= coupon.title %>
      </td>
      <td class="text-primary text-lg"><%= coupon.price %></td>
      <td>
        <%= link_to '編輯', edit_admin_coupon_path(coupon), class: "btn btn-xs btn-warning" %>
        <%= link_to '刪除', admin_coupon_path(coupon), method: "delete", data: { confirm: "確定刪除?" }, class: "btn btn-xs btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
